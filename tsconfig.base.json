{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2017", "es2019"],
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@websrc/*": ["website/src/*"],
      "@coral-library/*": ["website/coral-library/*"],
      "@libsrc/*": ["library/src/*"]
    }
  },
  "exclude": ["coverage", "public", "dist"]
}