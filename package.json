{
  "name": "netlify-injection-test",
  "version": "1.0.0",
  "description": "Minimal reproducible repository to demonstrate Netlify environment variable injection bug with PNPM",
  "packageManager": "pnpm@9.15.0",
  "author": "Colin-TUE",
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter=* --no-bail build",
    "build:netlify": "pnpm netlify build --filter website",
    "start:netlify": "pnpm clean:sigerror && netlify dev --filter website",
    "clean": "rm -rf coverage/ && pnpm --filter=*  clean",
    "clean:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "clean:netlify": "pnpm clean && pnpm --filter=website clean:netlify",
    "clean:sigerror": "rm -rf website/.cache/.parcel-cache",
    "typecheck": "pnpm --filter=* --no-bail typecheck"
  },
  "devDependencies": {
    "netlify-cli": "23.11.0",
    "prettier": "2.8.8",
    "ts-node": "10.9.1",
    "ts-pattern": "5.8.0",
    "typescript": "5.1.6"
  }
}
